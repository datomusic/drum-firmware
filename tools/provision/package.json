{
  "name": "drum-provision-tool",
  "version": "1.0.0",
  "description": "TypeScript provisioning tool for DRUM hardware",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "drum-provision": "dist/index.js"
  },
  "scripts": {
    "build": "tsc --module commonjs --target ES2020 --outDir dist index.ts",
    "build:watch": "tsc --module commonjs --target ES2020 --outDir dist --watch index.ts",
    "start": "node --experimental-strip-types index.ts",
    "start:compiled": "npm run build && node dist/index.js",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}